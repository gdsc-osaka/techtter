rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      match /topics/{topicId} {
        allow read: true;
        allow write: if request.auth != null;
      }

      match /users/{userId}/posts/{postId} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }

    }
  }
}
